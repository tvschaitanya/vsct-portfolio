---
import MainLayout from "../layouts/main.astro";
import ImageComparer from "../components/ui/ImageComparer";
---

<MainLayout title="Image Comparison">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Image Comparison</h1>

    <div class="max-w-4xl mx-auto">
      <ImageComparer
        beforeImage="/assets/images/projects/kdm-before.jpeg"
        afterImage="/assets/images/projects/kdm-after.png"
        beforeAlt="Before image"
        afterAlt="After image"
        beforeLabel="Before"
        afterLabel="Re-Designed"
        maxWidth="100%"
        maxHeight="400px"
        beforeFocus="top center"
        afterFocus="center center"
        client:load
      />
    </div>
  </div>
</MainLayout>
