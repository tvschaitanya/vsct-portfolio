---
import experiences from "../../collections/experiences.json";
import AboutExperience from "./about-experience.astro";
import PageHeading from "../ui/page-heading.astro";
---

<section
  class="relative z-20 max-w-2xl mx-auto my-8 sm:my-12 px-4 sm:px-7 lg:px-0"
>
  <PageHeading
    title='About <span class="text-blue-500">Me</span>'
    description="Hello, I'm Venkata Sai Chaitanya Tatikonda, a passionate Frontend Developer..."
  />

  <img
    src="/assets/images/about.jpg"
    class="relative z-30 w-full my-6 sm:my-10 rounded-xl shadow-md"
    alt="Chaitanya Tatikonda"
  />

  <h2 class="mb-2 text-xl sm:text-2xl font-bold dark:text-neutral-200">
    Short Bio
  </h2>
  <p class="mb-6 text-base dark:text-neutral-400">
    Passionate about front-end development 🧑🏻‍💻, exploring back-end technologies
    🤷🏻‍♂️, and learning the ropes of GenAI.
  </p>

  <h2
    class="mt-4 mb-2 text-xl sm:text-2xl font-bold lg:mt-8 sm:mt-6 dark:text-neutral-200"
  >
    Experience
  </h2>
  <div class="px-3 sm:px-5 py-6 sm:py-8">
    {
      experiences.map((experience) => {
        return (
          <div class="pb-8 sm:pb-10 border-l border-gray-200 last:border-l-0 dark:border-neutral-700">
            <AboutExperience
              dates={experience.dates}
              role={experience.role}
              company={experience.company}
              description={experience.description}
              logo={experience.logo}
            />
          </div>
        );
      })
    }
  </div>
</section>
