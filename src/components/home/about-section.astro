---
import experiences from "../../collections/experiences.json";
import AboutExperience from "./about-experience.astro";
import PageHeading from "../ui/page-heading.astro";
import { Icon } from "astro-icon/components";
import SkillsSection from "../home/skills-section.astro"; // Reusing SkillsSection component for consistency
---

<section class="relative z-20 max-w-2xl mx-auto my-12 px-4 sm:px-7 lg:px-0">
  <PageHeading title='About <span class="text-blue-500">Me</span>' />
  <div
    class="relative z-30 w-[333px] h-[333px] my-10 rounded-full overflow-hidden shadow-md top-0 left-1/2 transform -translate-x-1/2"
  >
    <img src="/assets/images/me.jpeg" class="object-cover w-full h-full" />
  </div>
  <h2 class="mb-2 text-2xl sm:text-3xl font-bold dark:text-neutral-200">
    Short Bio
  </h2>
  <p
    class="text-base sm:text-lg leading-relaxed text-gray-600 dark:text-neutral-400"
  >
    Hi, I'm <strong>Venkata Sai Chaitanya Tatikonda</strong> — I specialize in creating
    front-end experiences 🧑🏻‍💻 and am expanding my expertise to back-end development
    and GenAI to build more comprehensive and dynamic solutions.
  </p>

  <!-- Skills Logo Section -->
  <SkillsSection />
</section>
