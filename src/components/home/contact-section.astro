---
import { Icon } from "astro-icon/components";
import PageHeading from "../ui/page-heading.astro"; // Reusing PageHeading component for consistency
---

<section
  class="relative z-20 max-w-2xl mx-auto my-8 sm:my-12 px-4 sm:px-7 lg:px-0"
>
  <!-- Page Heading for Contact -->
  <PageHeading
    title='Contact <span class="text-blue-500">Me</span>'
    description="Feel free to get in touch with me through any of the platforms below. I'm always happy to connect!"
  />

  <!-- Contact Buttons - Improved mobile responsiveness with better spacing -->
  <div class="z-50 flex flex-wrap justify-center gap-3 sm:gap-4 mt-6 sm:mt-8">
    <!-- Email Button -->
    <a
      href="mailto:tvschaitanya@outlook.com"
      class="inline-flex items-center gap-1 sm:gap-2 px-4 sm:px-6 py-2 sm:py-3 bg-neutral-900 text-white text-xs sm:text-sm font-semibold rounded-full duration-300 ease-in-out transform hover:bg-neutral-700 hover:scale-105 hover:text-neutral-100 focus:outline-none focus:ring-2 focus:ring-neutral-900"
    >
      <Icon name="mdi:email" class="w-4 h-4 sm:w-5 sm:h-5" /> Email
    </a>

    <!-- LinkedIn Button -->
    <a
      href="https://www.linkedin.com/in/tvschaitanya/"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-1 sm:gap-2 px-4 sm:px-6 py-2 sm:py-3 bg-blue-600 text-white text-xs sm:text-sm font-semibold rounded-full duration-300 ease-in-out transform hover:bg-blue-500 hover:scale-105 hover:text-white focus:outline-none focus:ring-2 focus:ring-blue-500"
    >
      <Icon name="mdi:linkedin" class="w-4 h-4 sm:w-5 sm:h-5" /> LinkedIn
    </a>

    <!-- GitHub Button -->
    <a
      href="https://github.com/tvschaitanya"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-1 sm:gap-2 px-4 sm:px-6 py-2 sm:py-3 bg-gray-800 text-white text-xs sm:text-sm font-semibold rounded-full duration-300 ease-in-out transform hover:bg-gray-600 hover:scale-105 hover:text-white focus:outline-none focus:ring-2 focus:ring-neutral-900"
    >
      <Icon name="mdi:github" class="w-4 h-4 sm:w-5 sm:h-5" /> GitHub
    </a>

    <!-- Hashnode Button -->
    <a
      href="https://tvschaitanya.hashnode.dev/"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-1 sm:gap-2 px-4 sm:px-6 py-2 sm:py-3 bg-[#2962FF] text-white text-xs sm:text-sm font-semibold rounded-full duration-300 ease-in-out transform hover:bg-[#1e4ab0] hover:scale-105 hover:text-white focus:outline-none focus:ring-2 focus:ring-[#1e4ab0]"
    >
      <Icon name="simple-icons:hashnode" class="w-4 h-4 sm:w-5 sm:h-5" /> Hashnode
    </a>
  </div>
</section>
